{
  "exclude": [
    "node_modules",
    "coverage",
    "lib",
    "scripts"
  ],
  "files": [
    "src/index.ts"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018"
    ],
    "types": [
      "react"
    ],
    "declaration": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "outDir": "lib",
    "skipLibCheck": true,
    "noImplicitThis": false,
    "downlevelIteration": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
